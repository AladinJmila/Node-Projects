<h1>Stories</h1>
<div class='row'>
  {{#each stories}}
    <div class='col s12 m4'>
      <div class='card'>
        <div class='card-image'>

          <a href='/stories/edit/{{_id}}' class='btn-floating halfway-fab red'>
            <i class='fa fa-pencil'></i>
          </a>
        </div>
        <div class='card-content center-align'>
          <h5>{{title}}</h5>
          {{!-- <p class='story-text'>{{truncate body 150}}</p> --}}
          <p class='story-text'>{{stripTags (truncate body 150)}}</p>
          <br />
          <div class='chip'>
            <img src='{{creator.image}}' alt='creator' />
            {{creator.firstName}}
            {{creator.lastName}}
          </div>
        </div>
        <div class='card-action center-align'>
          <a href='/stories/show/{{_id}}' class='btn grey'>
            Read More
          </a>
        </div>
      </div>
    </div>
  {{else}}
    <p>There are no stories in db</p>
  {{/each}}
</div>